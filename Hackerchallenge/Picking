    public static int pickingNumbers(List<int> a)
    {
        int[] arr = a.ToArray();
        int max = 0;
        for(int i=0; i<arr.Length;i++)
        {
            int temp =0;
            Array.Sort(arr);
            for(int j=i; j<arr.Length;j++)
            {
                if(Math.Abs(arr[i]-arr[j])<=1) temp++;
                else break;
            }
            if(temp>max)
            max=temp;
        }
        return max;
    }

}
